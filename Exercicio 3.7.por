programa {
  funcao inicio() {
    /*3.7// Crie um algoritmo que leia dois números e calcule a média. */

    real n1, n2, media

    escreva("Digite o primeiro número: ")
    leia(n1)

    escreva("Digite o segundo número: ")
    leia(n2)

    media = (n1 + n2) / 2

    escreva("A média entre os dois números digitados é: " + media)

  }
}
